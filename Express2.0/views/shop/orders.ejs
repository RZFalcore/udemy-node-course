<body>
    <%- include("../includes/navigation.ejs") %>
<main>
    <% if(orders.length <= 0 ) { %>
        <h1>Cart is empty!</h1>
    <% } else { %>
        <ul>
            <% orders.forEach(order => { %>
                <li>
                    <h1>Order #<%= order.id %></h1>
                    <ul>
                        <% order.products.forEach(product => { %>
                            <li>
                                <%= product.title %> (<%= product.quantity %>)
                            </li>
                        <% }); %>
                    </ul>
                </li>
            <% }); %>
        </ul>
    <% } %>   
</main>
<%- include("../includes/end.ejs") %>