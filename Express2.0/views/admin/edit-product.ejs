<%- include("../includes/head.ejs", {docTitle: docTitle}) %>
</head>
<body>
    <%- include("../includes/navigation.ejs") %>
    <main>
        <form class="product-form" action="/admin/<% if (edit) { %>edit-product<% } else { %>add-product<% } %>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<% if (edit) { %> <%= product.title %> <% } %>">
            </div>
            <div class="form-control">
                <label for="imageUrl">Image</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<% if (edit) { %> <%= product.imageUrl %> <% } %>">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01" value=<% if (edit) { %> <%= product.price %> <% } %>>
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" cols="30" rows="5"><% if (edit) { %> <%= product.description %> <% } %></textarea>    
            </div>

            <button class="btn" type="submit"><% if (edit) { %>Edit product<% } else { %>Add Product<% } %></button>
        </form>
    </main>
<%- include("../includes/end.ejs") %>
