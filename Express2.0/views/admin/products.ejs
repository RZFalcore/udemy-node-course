<%- include("../includes/head.ejs", {docTitle: docTitle}) %>
</head>
<body>
    <%- include("../includes/navigation.ejs") %>
    <main>
       <% if (products.length > 0) { %>
        <div class="wrap">
            <% products.forEach(product => { %>
                <article class="card__product-item">
                    <header class="card__header">
                        <h2 class="card__title"><%= product.title %></h2> 
                    </header> 
                    <img class="card__img" src="<%= product.imageUrl %>" alt="<%= product.title %>" srcset=""/>
                    <div class="card__content">
                        <h3 class="card__price">$ <%= product.price %></h3> 
                        <p class="card__description"><%= product.description %></p> 
                        <div class="card__actions" >
                            <a href="/admin/edit-product" class="card__btn">Edit</button>
                                <form action="/admin/delete-product" method="post">
                                    <button class="card__btn" type="submit">Delete</button>  
                                </form>  
                        </div> 
                    </div>
                </article> 
            <% }) %>
        </div>
                    <% } else { %>
            <h1>No products yet...</h1> 
        <% } %>

            </main>
<%- include("../includes/end.ejs") %>