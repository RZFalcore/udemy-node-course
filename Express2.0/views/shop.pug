doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{docTitle}
        link(rel="stylesheet", href="/css/main.css")
        link(rel="stylesheet", href="/css/products.css")
    body   
        header.main-header
            nav.main-header__nav
                ul.main-header__item-list 
                    li.main-header__item
                        a.active(href="/") Shop  
                    li.main-header__item
                        a(href="/admin/add-product") Add product  
        main 
            if products.length > 0
                each product in products 
                    article.card__product-item
                        header.card__header 
                            h2.card__title #{product.title}
                            img.card__img(src="https://upload.wikimedia.org/wikipedia/commons/thumb/8/89/Book_stub_img.svg/450px-Book_stub_img.svg.png", alt="Image", srcset="")
                        .card__content 
                            h3.card__price Price: 10.00$
                            p.card__description Lorem ipsum dolor sit.
                        .card__actions 
                            button.card__btn Add to cart 
            else 
                h1 No products yet...